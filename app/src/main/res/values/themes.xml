<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SwiftyProteins" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CustomActionbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?attr/colorPrimaryVariant</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:textAppearance">@style/TextView.Normal</item>
    </style>

    <style name="CustomToolbar.Back" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">@null</item>
        <item name="android:navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="CustomToolbar.Back.Bg" parent="CustomToolbar.Back">
        <item name="android:background">@color/toolbarBg</item>
    </style>

    <style name="CustomToolbar.Close" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">@null</item>
        <item name="android:navigationIcon">@drawable/ic_close</item>
    </style>

    <style name="TextView.Normal" parent="Theme.SwiftyProteins">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:lineSpacingExtra">15dp</item>
    </style>

    <style name="TextView.Normal.Big.Primary" parent="TextView.Normal">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">25sp</item>
    </style>
</resources>